{
  "name": "sentinel-solutions-mcp",
  "version": "1.0.4",
  "description": "MCP server for analyzing Microsoft Sentinel solutions from any GitHub repository and mapping data connectors to Log Analytics tables",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sentinel-solutions-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup && npm run build:index",
    "build:index": "tsx scripts/build-index.ts",
    "dev": "tsx src/index.ts",
    "watch": "tsup --watch",
    "test": "npm run test:index",
    "test:index": "node scripts/test/test-index-load.mjs",
    "test:mcp": "bash scripts/test/test-mcp.sh",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "microsoft-sentinel",
    "azure-sentinel",
    "security",
    "log-analytics",
    "model-context-protocol"
  ],
  "author": "Toby Goulden",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/noodlemctwoodle/sentinel-solutions-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/noodlemctwoodle/sentinel-solutions-mcp/issues"
  },
  "homepage": "https://github.com/noodlemctwoodle/sentinel-solutions-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "csv-writer": "^1.6.0",
    "js-yaml": "^4.1.1",
    "zod": "^4.1.13",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
